
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow admin full access
    // match /admin/{allPaths=**} {
    //   allow read, write: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    // }

    // Allow users to upload their own avatars
    match /avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload their own challenge videos
    match /challenges/{userId}/{allPaths=**} {
      allow read; // Allow public read for verification
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload their own session proof videos
    match /proof/{userId}/{allPaths=**} {
        allow read; // Allow public read for verification
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
