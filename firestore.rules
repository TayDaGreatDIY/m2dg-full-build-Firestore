rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------
    // USERS & SUBCOLLECTIONS
    // -------------------
    match /users/{userId} {
      // Profiles are publicly readable, but only the owner can write.
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;

      // Allow owner to read/write their own subcollections (stats, notifications, etc.)
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // -------------------
    // CONVERSATIONS
    // -------------------
    match /conversations/{cid} {
      // Allow reading a list of conversations ONLY if the query includes the user's UID.
      allow list: if request.auth != null && request.query.where[0][2] == request.auth.uid;
      
      // Allow get/update/delete on a specific conversation if the user is a member.
      allow get, update, delete: if request.auth != null && request.auth.uid in resource.data.memberIds;

      // Creation: requester must be in the memberIds and memberIds must be a small array (e.g., 2â€“10)
      allow create: if request.auth != null
                    && request.auth.uid in request.resource.data.memberIds
                    && request.resource.data.memberIds is list
                    && request.resource.data.memberIds.size() >= 2
                    && request.resource.data.memberIds.size() <= 10;

      // Messages subcollection
      match /messages/{mid} {
        // Parent conversation governs access
        allow read, create: if request.auth != null
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(cid)).data.memberIds;

        // Optional: block edits/deletes of existing messages (common for chat)
        allow update, delete: if false;
      }
    }
    
    // -------------------
    // AI TRAINER MEMORY
    // -------------------
    match /aiTrainerMemory/{userId}/{doc=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // -------------------
    // COURTS, CHALLENGES, COMPETITIONS (Publicly readable)
    // -------------------
    match /courts/{courtId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow writes for authenticated users (e.g., check-ins)
    }
     match /courts/{courtId}/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /challenges/{challengeId} {
      allow read: if true;
      // Writes are controlled by more specific rules (e.g., only challenger/opponent)
      allow write: if request.auth != null &&
        (request.auth.uid == resource.data.challengerId ||
         request.auth.uid == resource.data.opponentId || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
     match /challenges/{challengeId}/disputes/{disputeId} {
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.raisedBy);
    }
    
    match /competitions/{competitionId} {
        allow read: if true;
        allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }


    // -------------------
    // ADMIN LOGS (Admin only)
    // -------------------
    match /admin_logs/{logId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
