
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ALLOW USERS TO MANAGE THEIR OWN USER DATA
    match /users/{uid} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;

      // ALLOW USER SUBCOLLECTIONS (stats, sessions, messages pointers, etc.)
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }
    
    // AI TRAINER MEMORY
    match /aiTrainerMemory/{uid}/{doc=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // COURTS
    match /courts/{courtId} {
      allow read: if true; // courts directory is public
      allow write: if request.auth != null; // admins or app logic writes
    }

    // COURT CHECK-INS
    match /courts/{courtId}/checkins/{checkinId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == checkinId;
    }

    // LEADERBOARD
    match /leaderboard/{doc} {
      allow read: if true;
      allow write: if request.auth != null; // XP updates come from app
    }

    // MESSAGING SYSTEM
    match /conversations/{conversationId} {
        // User can only read/write conversations they are a member of.
        allow read, write: if request.auth != null && request.auth.uid in resource.data.memberIds;

        match /messages/{messageId} {
            // User can only read/write messages in conversations they are a member of.
            allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.memberIds;
        }
    }
  }
}
