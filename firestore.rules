rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------
    // USERS
    // -------------------
    match /users/{userId} {
      // Users can only read/write their own data, but profiles are publicly readable
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // -------------------
    // CONVERSATIONS
    // -------------------
    match /conversations/{cid} {
      // Each conversation document MUST contain: memberIds: array<string>, createdAt, lastMessage (optional)
      allow read, update, delete: if request.auth != null && request.auth.uid in resource.data.memberIds;

      // Creation: requester must be in the memberIds and memberIds must be a small array (e.g., 2â€“10)
      allow create: if request.auth != null
                    && request.auth.uid in request.resource.data.memberIds
                    && request.resource.data.memberIds is list
                    && request.resource.data.memberIds.size() >= 2
                    && request.resource.data.memberIds.size() <= 10;

      // Messages subcollection
      match /messages/{mid} {
        // Parent conversation governs access
        allow read, create: if request.auth != null
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(cid)).data.memberIds;

        // Optional: block edits/deletes of existing messages (common for chat)
        allow update, delete: if false;
      }
    }

    // -------------------
    // Other Collections
    // -------------------
    match /courts/{courtId} {
      allow get, list: if request.auth != null;
    }
     match /courts/{courtId}/{document=**} {
      allow read: if request.auth != null;
    }

    // -------------------
    // CHALLENGES + DISPUTES
    // -------------------
    match /challenges/{challengeId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == resource.data.challengerId ||
         request.auth.uid == resource.data.opponentId);
    }

    match /challenges/{challengeId}/disputes/{disputeId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == resource.data.raisedBy);
    }

    // -------------------
    // NOTIFICATIONS
    // -------------------
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }
  }
}
