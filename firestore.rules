
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------
    // USERS
    // -------------------
    match /users/{userId} {
      // Users can only read/write their own data, but profiles are publicly readable
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // -------------------
    // CHATS (top-level)
    // -------------------
    match /chats/{chatId} {
      // Read your own chats
      allow get, list: if request.auth != null && request.auth.uid in resource.data.participants;
      // Create a new chat you are part of
      allow create: if request.auth != null
        && request.resource.data.participants is list
        && request.auth.uid in request.resource.data.participants
        && request.resource.data.participants.size() >= 2;
      // Update only if you are a participant (e.g., bump lastMessageAt)
      allow update: if request.auth != null && request.auth.uid in resource.data.participants;
      // Optional: block deletes for now
      allow delete: if false;

      // Messages subcollection inside a chat: /chats/{chatId}/messages/{messageId}
      match /messages/{messageId} {
        allow read, create: if request.auth != null
          && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        // No updates/deletes of old messages in this phase
        allow update, delete: if false;
      }
    }

    // -------------------
    // Other Collections
    // -------------------
    match /courts/{courtId} {
      allow get, list: if request.auth != null;
    }
     match /courts/{courtId}/{document=**} {
      allow read: if request.auth != null;
    }

    // -------------------
    // CHALLENGES + DISPUTES
    // -------------------
    match /challenges/{challengeId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == resource.data.challengerId ||
         request.auth.uid == resource.data.opponentId);
    }

    match /challenges/{challengeId}/disputes/{disputeId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == resource.data.raisedBy);
    }

    // -------------------
    // NOTIFICATIONS
    // -------------------
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }
  }
}
