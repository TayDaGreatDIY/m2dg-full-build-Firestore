
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------
    // USERS
    // -------------------
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // -------------------
    // CHATS (top-level)
    // -------------------
    match /chats/{chatId} {
      // Allow read/write if the user's UID is in the `participants` array.
      // `request.resource.data` is checked for create operations.
      // `resource.data` is checked for read, update, delete operations.
      allow read, write: if request.auth != null && 
        (request.resource.data.participants.hasAny([request.auth.uid]) ||
         resource.data.participants.hasAny([request.auth.uid]));
    }

    // -------------------
    // MESSAGES (inside chats)
    // -------------------
    match /chats/{chatId}/messages/{messageId} {
      // A user can read/write messages in a chat they are a part of.
      // This rule relies on getting the parent chat document to check participants.
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
    }

    // -------------------
    // CHALLENGES + DISPUTES
    // -------------------
    match /challenges/{challengeId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == resource.data.challengerId ||
         request.auth.uid == resource.data.opponentId);
    }

    match /challenges/{challengeId}/disputes/{disputeId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == resource.data.raisedBy);
    }

    // -------------------
    // NOTIFICATIONS
    // -------------------
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }

    // -------------------
    // Other Collections
    // -------------------
    match /courts/{courtId} {
      allow get, list: if request.auth != null;
    }
     match /courts/{courtId}/{document=**} {
      allow read: if request.auth != null;
    }
  }
}
