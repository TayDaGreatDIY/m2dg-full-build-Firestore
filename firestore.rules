
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ALLOW USERS TO MANAGE THEIR OWN USER DATA
    match /users/{uid} {
      // Publicly readable, but only the owner can write.
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;

      // ALLOW USER SUBCOLLECTIONS (stats, sessions, messages pointers, etc.)
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }

    // COURTS
    match /courts/{courtId} {
      allow read: if true; // courts directory is public
      allow write: if request.auth != null; // admins or app logic writes
    }

    // COURT CHECK-INS
    match /courts/{courtId}/checkins/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // LEADERBOARD
    match /leaderboard/{doc} {
      allow read: if true;
      allow write: if request.auth != null; // XP updates come from app
    }

    // MESSAGING SYSTEM
    match /messages/{conversationId} {
      allow read, write: if request.auth != null;

      match /threads/{threadId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
