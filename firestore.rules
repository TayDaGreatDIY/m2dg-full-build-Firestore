
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Public read of courts, challenges, competitions
    match /courts/{courtId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }
    match /challenges/{challengeId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }
    match /competitions/{competitionId} {
        allow read: if true;
        allow write: if request.auth.token.admin == true;
    }
    
    // Runs and Check-ins are public to read
    match /courts/{courtId}/{subcollection}/{docId} {
        allow read: if true;
        allow write: if request.auth != null; // Allow logged-in users to check-in or host runs
    }

    // Users can read/update their own profile, admins can do anything
    match /users/{userId} {
      allow read, update: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      allow create: if request.auth != null;
      allow delete: if request.auth.token.admin == true;
    }
    
    // Chats are private to members
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.memberIds;
    }
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.memberIds;
    }

    // User-specific subcollections (training, notifications) are private to the user, but readable by admins
    match /users/{userId}/{collection}/{docId} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
       allow read: if request.auth.token.admin == true;
    }
    
    // Activity logs are write-only for admins
    match /admin_logs/{logId} {
        allow read, write: if request.auth.token.admin == true;
        allow create: if request.auth.token.admin == true;
    }

  }
}
