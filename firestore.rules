rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Public read of court data
    match /courts/{courtId} {
      allow read: if true;
    }

    // Users can read/update their own profile
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Challenges are public to read
    match /challenges/{challengeId} {
      allow read: if true;
    }
    
    // Chats are private to members
    match /chats/{chatId} {
      allow read, write: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.memberIds;
    }
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.memberIds;
    }

    // User-specific subcollections are private to the user
    match /users/{userId}/{collection}/{docId} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Admin override for all data
    // This is a broad rule. For production, you might want more granular admin rules.
    match /{document=**} {
      allow read, write: if request.auth.token.admin == true;
    }
  }
}
